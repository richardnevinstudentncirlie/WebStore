@model IEnumerable<WebStore.Domain.Entities.OrderItem>

@{
    ViewBag.Title = "Order Items";
}

@section featured {
    @Html.Partial("MainHeadingPartial")
}

<div class="panel panel-default">

    <div class="panel-heading">
        All Order Items
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">OrderItemID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.OrderItemID</td>
                    <td>@item.Name</td>
                    <td class="text-right">@item.Price.ToString("c")</td>
                    <td class="text-right">@item.Quantity</td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Return to Orders", "RouteToOrder", null,
            new { @class = "btn btn-default" })
    </div>
</div>
