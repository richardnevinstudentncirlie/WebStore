@model IEnumerable<WebStore.Domain.Entities.Category>

@{
    ViewBag.Title = "Categories";
}

@section featured {
    @Html.Partial("MainHeadingPartial")
}

<div class="panel panel-default">

    <div class="panel-heading">
        All Categories
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th class="text-left">Code</th>
                <th class="text-left">Description</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model) {
                <tr>
                    <td class="text-right">@item.CategoryID</td>
                    <td>@Html.ActionLink(item.CategoryCode, "Edit", new { item.CategoryID })</td>
                    <td class="text-left">@item.Description</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "AdminCategory")) {
                            @Html.Hidden("CategoryID", item.CategoryID)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a new category", "Create", null,
            new { @class = "btn btn-default" })
    </div>
</div>
