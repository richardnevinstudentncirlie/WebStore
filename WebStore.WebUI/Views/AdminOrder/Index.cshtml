@model IEnumerable<WebStore.Domain.Entities.Order>

@{
    ViewBag.Title = "Orders";
}

@section featured {
    @Html.Partial("MainHeadingPartial")
}

<div class="panel panel-default">

    <div class="panel-heading">
        All Orders
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">OrderID</th>
                <th>OrderDate</th>
                <th>ProductCount</th>
                <th>TotalOrder</th>
                <th>PaymentConfirmation</th>
                <th>LastName</th>
                <th>CustomerID </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.OrderID</td>
                    <td>@item.OrderDate</td>
                    <td class="text-right">@item.ProductCount</td>
                    <td class="text-right">@item.TotalOrder.ToString("c")</td>
                    <td>@item.PaymentConfirmation</td>
                    <td>@item.LastName</td>
                    <td class="text-right">@item.CustomerID</td>
                    <td class="text-center">
                        @using (Html.BeginForm("RouteToOrderItem", "AdminOrder"))
                        {
                            @Html.Hidden("OrderID", item.OrderID)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Detail" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
